<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity"
    app:layout_behavior=".ui.behaviors.CustomNestedScrollBehavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            style="@style/fields"
            android:layout_marginTop="8dp"
            >

            <ImageView
                android:id="@+id/lol"
                style="@style/icon.left"
                android:src="@drawable/ic_call_black_24dp"

                />

            <LinearLayout
                style="@style/inputWithHint"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editPhone"
                        style="@style/info_text"
                        android:hint="@string/hint_mobile"
                        android:text="@string/_phone"
                        >

                    </EditText>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/call_img"
                style="@style/icon.right"
                android:src="@drawable/ic_phone_in_talk_black_24dp"

                />
        </LinearLayout>

        <View
            style="@style/line.horizontal"
            />

        <LinearLayout
            style="@style/fields"
            >

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_email_black_24dp"

                />

            <LinearLayout
                style="@style/inputWithHint"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editEmail"
                        style="@style/info_text"
                        android:hint="@string/hintEmail"
                        android:text="@string/textEmail"
                        >

                    </EditText>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/send_img"
                style="@style/icon.right"
                android:src="@drawable/ic_send_black_24dp"

                />
        </LinearLayout>

        <View
            style="@style/line.horizontal"
            />

        <LinearLayout
            style="@style/fields">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/vk"

                />

            <LinearLayout
                style="@style/inputWithHint"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editVk"
                        style="@style/info_text"
                        android:hint="@string/hintVk"
                        android:text="@string/textVk"
                        >

                    </EditText>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/open_vk_img"
                style="@style/icon.right"
                android:src="@drawable/ic_remove_red_eye_black_24dp"

                />
        </LinearLayout>

        <View
            style="@style/line.horizontal"
            />

        <LinearLayout
            style="@style/fields">
            <ImageView
                style="@style/icon.left"
                android:src="@drawable/git"

                />

            <LinearLayout
                style="@style/inputWithHint"

                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editGit"
                        style="@style/info_text"
                        android:hint="@string/hintRep"
                        android:text="@string/textRep"
                        android:layout_height="wrap_content"
                        >

                    </EditText>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/open_git_img"
                style="@style/icon.right"
                android:src="@drawable/ic_remove_red_eye_black_24dp"

                />
        </LinearLayout>

        <View
            style="@style/line.horizontal"
            />

        <LinearLayout
            style="@style/fields">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_account_circle_black_24dp"

                />

            <LinearLayout
                style="@style/inputWithHint"
                android:layout_height="150dp"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editProfile"
                        style="@style/info_text"
                        android:paddingRight="16dp"
                        android:hint="@string/hintAbout"
                        android:text="@string/textAbout"
                        >

                    </EditText>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
</android.support.v4.widget.NestedScrollView>